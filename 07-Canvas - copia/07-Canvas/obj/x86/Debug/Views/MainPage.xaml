<Page
    x:Class="_07_Canvas.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_07_Canvas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.TopAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='1' Icon="Edit" Foreground="DarkViolet"                              ></AppBarButton>
            <AppBarButton x:ConnectionId='2' Icon="Add" Foreground="DarkViolet"                            ></AppBarButton>
        </CommandBar>
        
    </Page.TopAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        
        <Canvas Width="1000" Height="1000" Margin="0">
            <Rectangle Canvas.Left="30" Canvas.Top="30" Canvas.ZIndex="3"
               Fill="Red" MinWidth="100" MinHeight="100" />
            <Ellipse Fill="BlueViolet" Canvas.Left="100" Canvas.Top="70"
                     Width="200" Height="200" Canvas.ZIndex="1"></Ellipse>

            <Ellipse Fill="BlueViolet" Canvas.Left="150" Canvas.Top="150" 
                     Width="500" Height="500" Canvas.ZIndex="1"></Ellipse>
            <Ellipse Fill="Black" Canvas.Left="250" Canvas.Top="300" Stroke="White" StrokeThickness="10"
                     Width="100" Height="100" Canvas.ZIndex="1" RenderTransformOrigin="-0.289,-0.721"></Ellipse>
            <Ellipse Fill="Black" Canvas.Left="450" Canvas.Top="300" Stroke="White" StrokeThickness="10"
                     Width="100" Height="100" Canvas.ZIndex="1"></Ellipse>
            <Ellipse Fill="Brown" Canvas.Left="350" Canvas.Top="450" 
                     Width="100" Height="50" Canvas.ZIndex="1"></Ellipse>


        </Canvas>
        
    </Grid>
</Page>

